<div class="card card-form">
	<div class="card-header pb-3 bg-interactive"></div>
    <div class="border-form"></div>
	<div class="card-body p-4">
		<div class="text-center w-75 m-auto info">
			<h4 class="text-dark-50 mt-0 fw-bold">Inscription</h4>
			<p class="text-muted mb-4">Vous n'avez pas de compte ? Cr√©ez votre compte en moins d'une minute</p>
		</div>
		{{ form_start(form) }}
		{% if form_errors(form) %}
			<div class="alert alert-danger" role="alert">
				{{ form_errors(form) }}
			</div>
		{% endif %}
		<div class="container mt-1 ms-1">
			<div class="mb-3">
                {{ form_label(form.pseudo, 'Pseudonyme', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(form.pseudo, {'attr': {'class': 'form-control border-bottom border-dark border-top-0 border-start-0 border-end-0 border-2','placeholder': 'Exemple: '~ pseudo, 'autocomplete': 'pseudo'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.email, 'Email', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control border-bottom border-dark border-top-0 border-start-0 border-end-0 border-2','placeholder': 'Exemple: '~ email, 'autocomplete': 'email'}}) }}
            </div>
			<div class="mb-3">
				{{ form_label(form.plainPassword, 'Mot de passe', { 'label_attr': {'class': 'form-label'} }) }}
				{{ form_widget(form.plainPassword, {'attr': {'class': 'form-control border-bottom border-dark border-top-0 border-start-0 border-end-0 border-2','placeholder': 'Exemple: '~ password, 'minlength': 8, 'maxlength':4096, 'autocomplete': 'off'}}) }}
			</div>
			<div class="mb-3">
				{{ form_widget(form.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.agreeTerms, 'Accepter les conditions', { 'label_attr': {'class': 'form-label'} }) }}
			</div>
			<div class="mb-3 text-center">
				<button class="btn bg-interactive" type="submit">S'inscrire</button>
			</div>
		</div>
		{{ form_end(form) }}
	</div>
    <div class="border-form end-0"></div>
    <div class="card-footer bg-interactive pt-3"></div>
</div>